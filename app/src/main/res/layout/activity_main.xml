<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交数据"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btn_confim"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        app:layout_constraintTop_toBottomOf="@id/btn_confim"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开设备信息权限"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_open_device"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="打开位置权限"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_location"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll2"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_1confim"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提交数据"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_2confim"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll3"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        android:layout_marginTop="@dimen/fab_margin"
        android:visibility="gone"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交数据"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_3confim"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提交数据"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_4confim"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll4"
        app:layout_constraintTop_toBottomOf="@id/ll3"
        android:layout_marginTop="@dimen/fab_margin"
        android:visibility="gone"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交数据"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_5confim"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提交数据"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_6confim"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>